    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/daemons/compute/server",
            "args": [
                "--socket=/tmp/nnf.sock",
                "--nnf-node-name=kind-worker"
            ]
        },
        {
            "name": "Debug Client",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/daemons/compute/client",
            "args" :[
                "--source=/tmp/file.in",
                "--destination=/tmp/file.out",
                "--socket=/tmp/nnf.sock"
            ]
        },
        {
            "name": "Launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "args" :[
                "-socket=/tmp/nnf.sock",
            ]
        },
        {
            "name": "Test Current File (Nate)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${relativeFileDirname}",
            "args": [
                "-ginkgo.v",
                "-ginkgo.progress",
                "-ginkgo.fail-fast",
            ],
            "env": {
                "KUBEBUILDER_ASSETS": "/Users/roiger/Library/Application Support/io.kubebuilder.envtest/k8s/1.22.1-darwin-amd64",
                "GOMEGA_DEFAULT_EVENTUALLY_TIMEOUT": "10m",
                "GOMEGA_DEFAULT_EVENTUALLY_POLLING_INTERVAL": "500ms",
            },
            "showLog": true
        }
    ]
}